@inherits ComponentBase

<style>
    body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100vh;
        animation: gradientAnimation 10s linear infinite; /* Применяем анимацию */
        background: linear-gradient(45deg, @Color1, @Color2); /* Градиентный фон */
        background-size: 200% 200%; /* Увеличиваем размер фона */
    }

    @@keyframes gradientAnimation {
        0% {
            background-position: 60% 60%;
        }

        50% {
            background-position: 100% 100%;
        }

        100% {
            background-position: 60% 60%;
        }
    }

    }
</style>

@code
{
    [Parameter]
    public string Color1 { get; set; } = "#120155";

    [Parameter]
    public string Color2 { get; set; } = "#620051";

}