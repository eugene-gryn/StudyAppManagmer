@page "/"
@using APIServiceLayer.Models.Tasks
@using System.Runtime.CompilerServices
@inject StudlyApiBaseService ApiService
@inject ILocalStorageService LocalStorage
@inject AuthenticationStateProvider AuthService

@attribute [Authorize]

<PageTitle>Studly</PageTitle>

@foreach (var task in _tasks)
{
    <div style="max-width: 420px;" class="m-3">
        <TaskCard TaskObject="task" TaskView="ShortView.Card"/>
    </div>
}
<div style="max-width: 420px;" class="m-3">
    <TaskAddComponent 
        View="ShortView.Card" 
        OnConfirmCreationTaskCallback="OnCreationNewTask"></TaskAddComponent>
</div>


